{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash claude-agent/scripts/validate-command.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash claude-agent/scripts/post-edit-hook.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash claude-agent/scripts/on-subagent-complete.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(ffmpeg *)",
      "Bash(python *)",
      "Bash(pip *)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Skill(*)"
    ]
  }
}
